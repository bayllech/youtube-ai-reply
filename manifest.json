{
  "manifest_version": 3,
  "name": "YouTube AI Auto Reply",
  "version": "1.0",
  "description": "Automatically reply to YouTube comments using Zhipu AI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://studio.youtube.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://open.bigmodel.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://studio.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube AI Reply"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
  }